{
  "name": "stylelint-selector-bem-pattern",
  "version": "5.0.0",
  "description": "A stylelint plugin that harnesses the power of postcss-bem-linter",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "pretest": "npm run build",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" jest --runInBand",
    "prepare": "npm run build"
  },
  "exports": {
    "types": "./dist/index.d.ts",
    "import": "./dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bleeding-gums/stylelint-selector-bem-pattern.git"
  },
  "engines": {
    "node": "^22.0.0 || ^24.0.0 || ^25.0.0"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "stylelint",
    "stylelint-plugin",
    "css",
    "nesting",
    "linter",
    "bem"
  ],
  "author": "David Clark",
  "contributors": [
    "melon"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bleeding-gums/stylelint-selector-bem-pattern/issues"
  },
  "homepage": "https://github.com/bleeding-gums/stylelint-selector-bem-pattern#readme",
  "dependencies": {
    "lodash": "^4.17.23",
    "postcss": "^8.5.6",
    "postcss-bem-linter": "^4.0.1"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.23",
    "@types/node": "^25.2.1",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "jest": "^30.2.0",
    "jest-preset-stylelint": "^9.1.0",
    "prettier": "^3.8.1",
    "stylelint": "^17.1.1",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "setupFiles": [
      "jest-preset-stylelint/jest-setup.js"
    ],
    "setupFilesAfterEnv": [
      "jest-preset-stylelint/jest-setup-after-env.js"
    ],
    "moduleNameMapper": {
      "^(\\.\\.?/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true,
          "diagnostics": {
            "ignoreCodes": [
              151001
            ]
          }
        }
      ]
    }
  },
  "peerDependencies": {
    "stylelint": "^16.0.0 || ^17.0.0"
  }
}
